# ===========================
# Stage 1: Build environment
# ===========================
FROM python:3.11-slim AS builder

WORKDIR /app

# Install system deps
RUN apt-get update && apt-get install -y \
    curl \
    git \
    build-essential \
    supervisor \
    && rm -rf /var/lib/apt/lists/*

# Install Ollama
RUN curl -fsSL https://ollama.com/install.sh | sh

# Copy requirements and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir --prefix=/install -r requirements.txt

# Preload Ollama models (so container has them baked in)
RUN ollama pull mistral && \
    ollama pull gemma2

# Copy app code
COPY . .

# ===========================
# Stage 2: Final runtime image
# ===========================
FROM python:3.11-slim

WORKDIR /app

# Install runtime deps only (supervisor + curl for Ollama healthcheck)
RUN apt-get update && apt-get install -y \
    curl \
    supervisor \
    && rm -rf /var/lib/apt/lists/*

# Copy installed Python packages from builder
COPY --from=builder /install /usr/local
# Copy Ollama binaries and models
COPY --from=builder /usr/local/bin/ollama /usr/local/bin/ollama
COPY --from=builder /root/.ollama /root/.ollama

# Copy app code and supervisor config
COPY . .
COPY supervisord.conf /etc/supervisor/conf.d/supervisord.conf

# Expose ports
EXPOSE 8501 11434

# Run both Ollama + Streamlit via supervisor
CMD ["/usr/bin/supervisord"]
